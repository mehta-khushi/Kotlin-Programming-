<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".unitConvertor">

    <EditText
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter value in kg:  "
        android:textSize="21dp"
        app:layout_constraintBottom_toTopOf="@+id/textv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textv"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/btnp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <Button
        android:id="@+id/btnp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pound"
        app:layout_constraintBottom_toTopOf="@id/btncg"
        app:layout_constraintEnd_toStartOf="@id/btng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textv">

    </Button>

    <Button
        android:id="@+id/btng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="g"
        app:layout_constraintBottom_toTopOf="@id/btnmg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnp"
        app:layout_constraintTop_toBottomOf="@+id/textv"
        app:layout_constraintVertical_bias="0.473">

    </Button>

    <Button
        android:id="@+id/btncg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnmg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnp">

    </Button>

    <Button
        android:id="@+id/btnmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btncg"
        app:layout_constraintTop_toBottomOf="@id/btng">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>